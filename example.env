##################################################
# ChatGodApp Configuration File Example
# To configure ChatGodApp, copy this file to `.env` and fill in the required fields.
##################################################

# ---------- Configs ---------- #
SPEECH_ENGINE = "azure"  # Options: "azure", "kokoro"
ENABLE_OBS_WEBSOCKETS = True  # Set to True if you want to enable OBS WebSockets support

# ---------- Twitch API ---------- #

TWITCH_CHANNEL_NAME="YOUR-TWITCH-CHANNEL-NAME-HERE"

# ----- Twitch API Tokens -----

# All the following tokens can be generated by `https://twitchtokengenerator.com/`

# This is Access Token. It is required for the bot to connect to the Twitch API.
TWITCH_ACCESS_TOKEN="YOUR-TWITCH-ACCESS-TOKEN-HERE"

# This is Twitch Refresh Token. It is used to refresh the Access Token when it expires.
#   It is not used by the bot (yet),
#   but is useful to keep here for when we need to refresh the access token (at `https://twitchtokengenerator.com/`)
NOT_USED_TWITCH_REFRESH_TOKEN="YOUR-TWITCH-REFRESH-TOKEN-HERE"

# This is Twitch Client ID. It is not used by the bot (yet).
NOT_USED_TWITCH_CLIENT_ID="YOUR-TWITCH-CLIENT-ID-HERE"

# ---------- TTS API Tokens ---------- #

# ----- Kokoro TTS API ----- #
# Make sure these are set when using the Kokoro TTS API.

KOKORO_TTS_URL = "KOKORO-TTS-API-URL-HERE"
KOKORO_TTS_KEY = "not-needed-yet"  # The Kokoro TTS API does not yet support authentication, but this may change in the future.

# ----- Azure TTS API ----- #
# Make sure these are set when using the Azure TTS API.
AZURE_TTS_KEY = "YOUR-AZURE-TTS-KEY-HERE"
AZURE_TTS_REGION = "YOUR-AZURE-TTS-REGION-HERE"

